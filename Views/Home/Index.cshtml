@using MeetingApp.Models;
@model MeetingInfo;
@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout= "_Layout2";
}
<main class="text-center">

    <h1 class="h4">@ViewData["Selamlama"],@ViewData["UserName"]</h1>

    <p>Toplantı katılım durumunuzu bildiriniz.</p>

    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list group item">@Model.Location</li>
           <li class="list group item">@Model.Date.ToString("dd/MM/yyyy - HH/mm")</li>
           <li class="list group item">@Model.NumberOfPeople Katılımcı</li>
        </ul>
    </div>

    <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Başvuru Yap</a>
</main>